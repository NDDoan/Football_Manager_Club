<Window x:Class="FootballManagerWPF.Views.EmployeeEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballManagerWPF.Views"
        mc:Ignorable="d"
        Title="Thông tin Nhân viên" Height="600" Width="450"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <StackPanel>
                <TextBlock Text="Thông tin Nhân viên" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Username:"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Mật khẩu:"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,5,0,15" PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="Vai trò:"/>
                <ComboBox ItemsSource="{Binding RoleOptions}" SelectedItem="{Binding Role, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Họ tên:"/>
                <TextBox Text="{Binding Employee.FullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Giới tính:"/>
                <ComboBox ItemsSource="{Binding GenderOptions}" SelectedItem="{Binding Employee.Gender, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Phòng ban:"/>
                <ComboBox ItemsSource="{Binding Departments}" 
                      SelectedValuePath="DepartmentId"
                      DisplayMemberPath="Name"
                      SelectedValue="{Binding SelectedDepartmentId, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Địa chỉ:"/>
                <TextBox Text="{Binding Employee.Address, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Ngày bắt đầu làm việc:"/>
                <DatePicker SelectedDate="{Binding StartDate, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Ngày sinh:"/>
                <DatePicker SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="SĐT:"/>
                <TextBox Text="{Binding Employee.Phone, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Chức vụ:"/>
                <TextBox Text="{Binding Employee.Position, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Avatar (đường dẫn):"/>
                <TextBox Text="{Binding Employee.Avatar, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Lưu" Command="{Binding SaveCommand}" Width="80" Margin="5"/>
                    <Button Content="Hủy" Command="{Binding CancelCommand}" Width="80" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
