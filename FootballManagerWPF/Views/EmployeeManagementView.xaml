<Window x:Class="FootballManagerWPF.Views.EmployeeManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballManagerWPF.Views"
        mc:Ignorable="d"
        Title="Quản lý Nhân viên" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Quản lý Nhân viên" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <!-- Phần tìm kiếm nâng cao -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <TextBlock Text="Họ tên:"/>
                    <TextBox Width="150" Text="{Binding SearchFullName, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Phòng ban:"/>
                    <ComboBox Width="150" ItemsSource="{Binding Departments}" DisplayMemberPath="Name"
                              SelectedValuePath="DepartmentId" SelectedValue="{Binding SearchDepartmentId, UpdateSourceTrigger=PropertyChanged}"
                              IsEditable="False" />
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="Chức vụ:"/>
                    <TextBox Width="150" Text="{Binding SearchPosition, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <Button Content="Tìm kiếm" Command="{Binding SearchCommand}" Width="100" Margin="5"/>
            </StackPanel>
            <DataGrid ItemsSource="{Binding Employees}" 
          AutoGenerateColumns="False" 
          Height="350"
          SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding EmployeeId}" Width="Auto"/>
                    <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="Auto"/>
                    <DataGridTextColumn Header="Phòng ban" Binding="{Binding DepartmentId}" Width="Auto"/>
                    <DataGridTextColumn Header="Chức vụ" Binding="{Binding Position}" Width="*"/>
                    <DataGridTextColumn Header="SĐT" Binding="{Binding Phone}" Width="Auto"/>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Làm mới" Command="{Binding RefreshCommand}" Width="100" Margin="5"/>
                <Button Content="Thêm" Command="{Binding AddEmployeeCommand}" Width="100" Margin="5"/>
                <Button Content="Sửa" Command="{Binding EditEmployeeCommand}" Width="100" Margin="5"/>
                <Button Content="Xóa" Command="{Binding DeleteEmployeeCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
