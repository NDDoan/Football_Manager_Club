<Window x:Class="FootballManagerWPF.Views.EmployeeLeaveRequestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballManagerWPF.Views"
        mc:Ignorable="d"
        Title="Yêu cầu nghỉ của bạn" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Yêu cầu nghỉ của bạn" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Số ngày nghỉ còn lại:" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="{Binding RemainingLeaveDays}" FontSize="16" Foreground="Green" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding LeaveRequests}" AutoGenerateColumns="False" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding LeaveId}" Width="Auto"/>
                    <DataGridTextColumn Header="Loại nghỉ" Binding="{Binding LeaveType}" Width="*"/>
                    <DataGridTextColumn Header="Ngày bắt đầu" Binding="{Binding StartDate}" Width="*"/>
                    <DataGridTextColumn Header="Ngày kết thúc" Binding="{Binding EndDate}" Width="*"/>
                    <DataGridTextColumn Header="Số ngày" Binding="{Binding TotalDays}" Width="Auto"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="*"/>
                    <DataGridTextColumn Header="Ngày yêu cầu" Binding="{Binding RequestedAt, StringFormat='dd/MM/yyyy'}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Thêm yêu cầu" Command="{Binding AddLeaveRequestCommand}" Width="120" Margin="5"/>
                <Button Content="Làm mới" Command="{Binding RefreshCommand}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
