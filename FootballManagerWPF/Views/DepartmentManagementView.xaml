<Window x:Class="FootballManagerWPF.Views.DepartmentManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballManagerWPF.Views"
        mc:Ignorable="d"
        Title="Quản lý phòng ban" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Quản lý phòng ban" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <DataGrid ItemsSource="{Binding Departments}" AutoGenerateColumns="False" Height="250" 
                      SelectedItem="{Binding SelectedDepartment}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding DepartmentId}" Width="Auto"/>
                    <DataGridTextColumn Header="Tên phòng ban" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="2*"/>
                    <DataGridTextColumn Header="Ngày tạo" Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy'}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Thêm" Command="{Binding AddDepartmentCommand}" Width="80" Margin="5"/>
                <Button Content="Sửa" Command="{Binding EditDepartmentCommand}" Width="80" Margin="5"/>
                <Button Content="Xóa" Command="{Binding DeleteDepartmentCommand}" Width="80" Margin="5"/>
                <Button Content="Làm mới" Command="{Binding RefreshCommand}" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
