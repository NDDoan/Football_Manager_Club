<Window x:Class="FootballManagerWPF.Views.EmployeeNotificationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballManagerWPF.Views"
        mc:Ignorable="d"
        Title="Thông báo từ Admin" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Thông báo từ Admin" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid ItemsSource="{Binding Notifications}" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding NotificationId}" Width="Auto"/>
                    <DataGridTextColumn Header="Tiêu đề" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Nội dung" Binding="{Binding Content}" Width="2*"/>
                    <DataGridTextColumn Header="Ngày tạo" 
                                         Binding="{Binding CreatedAt, StringFormat='dd/MM/yyyy HH:mm'}" 
                                         Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Làm mới" Command="{Binding RefreshNotificationsCommand}" Width="100" Margin="5"/>
                <Button Content="Đóng" Width="100" Margin="5" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
